<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="plugin.video.kralex" name="Alem-i İslam" version="1.2.1" provider-name="kralex">
        <requires>
            <import addon="xbmc.python" version="2.1.0" />
            <import addon="repository.mutebessim" version="1.0.1" />
            <import addon="script.module.urlresolver" version="3.0.27" />
            <import addon="plugin.video.youtube" version="5.3.0" />
            <import addon="script.module.autocompletion" version="1.1.2" />
        </requires>
        <extension point="xbmc.python.pluginsource" provides="video" library="kralex.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Alem-i İslam - Kodi için online dini içerik eklentisi</summary>
            <description>Alem-i İslam eklentisi ile internetteki muhtelif dini içerikli sitelerin sohbet, vaaz ve konferans videoları cihazına geliyor.</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
                <screenshot>resources/screenshots/screenshot-01.jpg</screenshot>
                <screenshot>resources/screenshots/screenshot-02.jpg</screenshot>
                <screenshot>resources/screenshots/screenshot-03.jpg</screenshot>
            </assets>
        </extension>
    </addon>
    <addon id="repository.mutebessim" name="Mutebessim - Depo" version="1.0.0" provider-name="kralex">
        <requires>
            <import addon="xbmc.addon" version="12.0.0" />
        </requires>
        <extension point="xbmc.addon.repository" name="mutebessim eklentiler">
            <info compressed="false">https://github.com/mutebessim/kodi/raw/master/addons/addons.xml</info>
            <checksum>https://github.com/mutebessim/kodi/raw/master/addons/addon.xml.md5</checksum>
            <datadir zip="true">https://github.com/mutebessim/kodi/raw/master/addons/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Kodi Depom</summary>
            <description>Kodi için hazırladığımız eklentilerin dosyalarına erişebileceğiniz depomuz.</description>
            <platform>all</platform>
        </extension>
    </addon>
    <addon id="script.module.urlresolver" name="URLResolver" version="3.0.27" provider-name="tvaddons.ag, Eldorado">
        <requires>
            <import addon="xbmc.python" version="2.1.0" />
        </requires>
        <extension point="xbmc.python.module" library="lib" />
        <extension point="xbmc.python.pluginsource" library="lib/default.py" />
        <extension point="xbmc.addon.metadata">
            <platform>all</platform>
            <summary lang="en">Resolve common video host URL's to be playable in XBMC/Kodi.</summary>
            <description lang="en">Resolve common video host URL's to be playable in XBMC/Kodi, simplify addon development of video plugins requiring multi video hosts.</description>
        </extension>
    </addon>
    <addon id="service.wp2-oscam" name="WP2-OSCam" version="1.0.1" provider-name="kralex">
        <requires>
            <import addon="xbmc.python" version="2.1.0" />
        </requires>
        <extension point="xbmc.service" library="default.py">
            <provides></provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>oscam-1.20-unstable_svn-r11342 for LibreElec Wetek Play 2 Raybuntu edition</summary>
            <description>
oscam-1.20-unstable_svn-r11342 for LibreElec Wetek Play 2 Raybuntu edition
